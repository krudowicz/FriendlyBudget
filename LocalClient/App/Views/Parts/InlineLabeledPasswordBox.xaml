<UserControl x:Class="FriendlyBudget.LocalClient.App.Views.Parts.InlineLabeledPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriendlyBudget.LocalClient.App.Views.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Foreground="#ff9800" VerticalAlignment="Center" HorizontalContentAlignment="Right" Margin="10 0 10 0" FontSize="10" Content="{Binding LocalLabel}"></Label>
        <PasswordBox Grid.Column="1" Height="20" MinWidth="100" MaxWidth="200" VerticalAlignment="Center" Background="#2a2a2a" Foreground="#ff9800" BorderThickness="1" BorderBrush="#ff9800" Margin="10 0 10 0"></PasswordBox>
    </Grid>
</UserControl>
